---
import ComponentLayout from "./ComponentLayout.astro";
import PageLayout from "./PageLayout.astro";
import { formatDate } from "../utils";
const { frontmatter } = Astro.props;
import "../styles/markdown.css";
---

<PageLayout title={frontmatter.title}>
  <ComponentLayout>
    <article>
      <h1 class="font-cutive text-lg lg:text-4xl">
        {frontmatter.title}
      </h1>

      <div class="flex gap-4 my-2">
        <div class="avatar">
          <div class="w-12 rounded-full">
            <img src="/images/avatar.webp" />
          </div>
        </div>
        <div class="flex flex-col">
          <span>{frontmatter.author}</span>
          <span class="text-zinc-400">{formatDate(frontmatter.date)}</span>
        </div>
      </div>

      <hr class="border-t border-zinc-400" />

      {
        frontmatter.image && (
          <img
            class="aspect-video max-h-96 w-auto mx-auto my-8"
            src={frontmatter.image}
            alt={frontmatter.title}
          />
        )
      }
      <div class="markdown-content">
        <slot />
        {
          frontmatter.tags.length > 0 && (
            <div class="flex gap-2 mt-4">
              {frontmatter.tags.map((tag: string) => (
                <span class="tag text-zinc-400">#{tag}</span>
              ))}
            </div>
          )
        }
      </div>
    </article>
  </ComponentLayout>
</PageLayout>
